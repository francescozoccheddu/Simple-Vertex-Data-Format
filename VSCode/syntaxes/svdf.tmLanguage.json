{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "svdf",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#declaration"
		}
	],
	"repository": {
		"comment": {
			"patterns": [{
				"name": "comment",
				"begin": "<",
				"end": ">"
			}]
		},
		"declaration": {
			"patterns": [{
				"begin": "(?=[?#$:])",
				"end": ";",
				"endCaptures": {
					"0" : { "name" : "keyword.control" }
				},
				"patterns": [
					{
						"include": "#comment"
					},
					{
						"include": "#map_entry_key"
					},
					{
						"include": "#map_entry_value"
					},
					{
						"include": "#data"
					}
				]
			}]
		},
		"map_entry_key": {
			"patterns": [{
				"begin" : "[?#$]",
				"end" : "(?==)",
				"beginCaptures": {
					"0" : { "name" : "storage.type" }
				},
				"patterns": [
					{
						"name" : "variable.name",
						"match": "[A-Za-z0-9_.]+"
					},
					{
						"include": "#comment"
					}
				]
			}]
		},
		"map_entry_value": {
			"patterns": [{
				"begin" : "=",
				"end" : "(?=[?#$:;])",
				"beginCaptures": {
					"0" : { "name" : "keyword.control" }
				},
				"patterns": [
					{
						"include": "#comment"
					},
					{
						"contentName" : "string",
						"begin" : "\"",
						"end" : "\"",
						"captures": {
							"0" : { "name" : "keyword.control" }
						}
					},
					{
						"name" : "string",
						"match": "[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?"
					}
				]
			}]
		},
		"data": {
			"patterns": [{
				"begin" : ":",
				"end" : "(?=;)",
				"beginCaptures": {
					"0" : { "name" : "storage.type" }
				},
				"patterns": [
					{
						"name" : "constant.numeric",
						"match": "[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?"
					},
					{
						"name" : "keyword.control",
						"match": ","
					},
					{
						"include": "#comment"
					}
				]
			}]
		}
	},
	"scopeName": "text.svdf"
}